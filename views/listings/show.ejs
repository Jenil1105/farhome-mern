<% layout('layouts/boilerplate') %> 
<script>
    const api = "<%= process.env.MAP_API_KEY %>";
    const address = "<%= listing.location %>, <%= listing.country %>";
</script>

<div class="row">
        <div class="col-8 offset-3">
            <br>
            <h3><%= listing.title %></h3>
            <div class="card listing-card col-8">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="...">
                <div class="card-body">
                    <p class="card-text">Listed by: <i><%= listing.owner.username %></i></p>
                    <p class="card-text"><%= listing.description %></p>
                    <p class="card-text">Price: $<%= listing.price %></p>
                    <p class="card-text">Location: <%= listing.location %>, <%= listing.country %></p>
                    <% if(currentUser && currentUser._id.equals(listing.owner._id)){ %>
                        <a href="/listings/<%= listing._id %>/update" class="btn btn-danger">Edit Listing</a>
                        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-dark">Delete Listing</button>
                        </form>
                    <% } %>
                </div>
                
            </div>

        </div>
        <hr class="col-8 offset-2">

        
        <% if(currentUser){ %>
            <div class="col-3 offset-3">
                <h4>Add a Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-grow">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="3" checked />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>

                     
                     </div>
                    <div class="mb-3">
                        <label for="review" class="form-label">Add a Review</label>
                        <textarea class="form-control" id="review" name="review[comment]" rows="3" required></textarea>
                        <div class="invalid-feedback">
                            Please provide a review!!
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark">Submit Review</button>
                    <br><br>
                </form>
            </div>
            <hr class="col-8 offset-2">
        <% } %>
       
         

        <div class="col-8 offset-3">
            <h4 class="mb-3">Reviews</h4>
            <% if (listing.reviews.length === 0) { %>
                <p>No reviews yet. Be the first to review!
                    <% if(!currentUser){ %>
                        <a href="/login">Login</a> to add a review.
                    <% } %>
                </p>

            <% } else { %>
                <div class="row">
                    <% listing.reviews.forEach(function(review) { %>
                    
                        <div class="card col-5 mb-3 me-3">
                            <div class="card-body">
                                <h5 class="card-title"><%= review.author.username %></h5>
                                    <p class="starability-result" data-rating="<%= review.rating %>">
                                        Rated: <%= review.rating %> stars
                                    </p>
                                <p class="card-text"><%= review.comment %></p>
                                <% if(currentUser && currentUser._id.equals(review.author._id)){ %>
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-dark">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                            
                        </div>
            
                    <% }); %>
                </div>
            <% } %>
        </div>

        


        <div id="map" class="offset-3" style="height: 350px; width: 50%; border-radius: 12px;">
            
        </div>


</div>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="/js/map.js"></script>
